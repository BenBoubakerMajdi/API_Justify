  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest"], 
    "outDir": "./dist", 
    "rootDir": "./src" 
  },   
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "test"]

}
